# Production Environment Configuration
# These settings are applied in production deployment

# Service Configuration
ENVIRONMENT=production
AGENT_ENGINE_LOG_LEVEL=WARNING
LOG_LEVEL=WARNING
LOG_FORMAT=json

# Infrastructure (production endpoints)
DATABASE_HOST=prod-postgres.internal
DATABASE_PORT=5432
DATABASE_NAME=agent_engine
REDIS_HOST=prod-redis.internal
REDIS_PORT=6379

# ADK Configuration
ADK_SESSION_SERVICE=vertex
ADK_TIMEOUT=300
ADK_RETRY_ATTEMPTS=5
ADK_RETRY_DELAY=2

# Performance (production optimized)
AGENT_ENGINE_MAX_CONCURRENT=50
AGENT_ENGINE_REQUEST_TIMEOUT=300
DATABASE_MIN_CONNECTIONS=5
DATABASE_MAX_CONNECTIONS=25
DATABASE_CONNECTION_TIMEOUT=30

# Redis (production settings)
REDIS_MAX_CONNECTIONS=20
REDIS_SOCKET_TIMEOUT=30
REDIS_RETRY_ON_TIMEOUT=true

# Observability (full monitoring)
ENABLE_METRICS=true
ENABLE_TRACING=true
HEALTH_CHECK_INTERVAL=15
METRICS_PORT=9090

# Security (strict production)
CORS_ORIGINS=["https://tahoe.com", "https://app.tahoe.com"]
RATE_LIMIT_PER_MINUTE=60
SESSION_EXPIRE_HOURS=8

# Features (all enabled)
AGENT_ENGINE_ENABLE_AUDIT=true
AGENT_ENGINE_ENABLE_STREAMING=true
AGENT_ENGINE_ENABLE_VALIDATION=true

# ADK Model Configuration (production)
ADK_DEFAULT_MODEL=gemini-2.0-flash
ADK_FALLBACK_MODELS=["gemini-2.5-pro", "gemini-2.5-flash", "gemini-2.5-flash-lite"]
ADK_TEMPERATURE=0.2
ADK_MAX_TOKENS=8192