# Staging Environment Configuration
# These settings are applied in staging deployment

# Service Configuration
ENVIRONMENT=staging
AGENT_ENGINE_LOG_LEVEL=INFO
LOG_LEVEL=INFO
LOG_FORMAT=json

# Infrastructure (staging endpoints)
DATABASE_HOST=staging-postgres.internal
DATABASE_PORT=5432
DATABASE_NAME=agent_engine_staging
REDIS_HOST=staging-redis.internal
REDIS_PORT=6379

# ADK Configuration
ADK_SESSION_SERVICE=redis
ADK_TIMEOUT=300
ADK_RETRY_ATTEMPTS=3

# Performance (staging optimized)
AGENT_ENGINE_MAX_CONCURRENT=20
AGENT_ENGINE_REQUEST_TIMEOUT=300
DATABASE_MIN_CONNECTIONS=2
DATABASE_MAX_CONNECTIONS=15

# Observability
ENABLE_METRICS=true
ENABLE_TRACING=true
HEALTH_CHECK_INTERVAL=30

# Security
CORS_ORIGINS=["https://staging.tahoe.com"]
RATE_LIMIT_PER_MINUTE=100

# Features
AGENT_ENGINE_ENABLE_AUDIT=true
AGENT_ENGINE_ENABLE_STREAMING=true
AGENT_ENGINE_ENABLE_VALIDATION=true