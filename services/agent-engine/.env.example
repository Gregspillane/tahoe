# Agent Engine Service Configuration
# Copy this file to .env and fill in your secure values

# Environment
ENVIRONMENT=development

# Database Configuration (REQUIRED)
DATABASE_HOST=localhost
DATABASE_PORT=5435
DATABASE_NAME=tahoe
DATABASE_USER=tahoe
DATABASE_PASSWORD=CHANGE_THIS_SECURE_PASSWORD  # REQUIRED - Never commit real password
DATABASE_SCHEMA=agent_engine

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6382
# REDIS_PASSWORD=optional_redis_password

# Service Authentication (REQUIRED for production)
SERVICE_TOKEN=CHANGE_THIS_SECURE_TOKEN  # REQUIRED - Use strong random token

# Service Configuration
PORT=8001
DOMAIN=yourdomain.com
SERVICE_NAME=agent-engine

# Logging
LOG_LEVEL=INFO

# Model Provider API Keys (add as needed)
# GOOGLE_API_KEY=your_google_api_key
# OPENAI_API_KEY=your_openai_api_key