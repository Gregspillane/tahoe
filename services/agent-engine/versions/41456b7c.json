{
  "apiVersion": "agent-engine/v1",
  "kind": "AgentSpec",
  "metadata": {
    "name": "content_analyzer",
    "version": "1.0.0",
    "description": "Analyzes content using configurable strategies",
    "tags": [
      "analysis",
      "configurable"
    ],
    "author": "agent-engine-team"
  },
  "spec": {
    "agent": {
      "type": "llm",
      "model": {
        "primary": "gemini-2.0-flash",
        "fallbacks": [
          "gemini-2.5-pro",
          "gemini-2.5-flash"
        ],
        "parameters": {
          "temperature": 0.2,
          "max_tokens": 8192,
          "timeout": 300
        }
      },
      "instruction_template": "You are a {role} specializing in {domain}.\nYour task is to analyze the provided content and {objective}.\n\nGuidelines:\n- Be thorough and systematic\n- Provide structured output\n- Include confidence scores where applicable\n- Focus on accuracy over speed\n"
    },
    "tools": [
      {
        "name": "extract_entities",
        "source": "registry"
      },
      {
        "name": "calculate_score",
        "source": "inline",
        "definition": "def calculate_score(data: dict) -> float:\n    \"\"\"Calculate a score based on data attributes.\"\"\"\n    base_score = data.get('base', 0.5)\n    modifier = data.get('modifier', 1.0)\n    return min(1.0, base_score * modifier)\n"
      }
    ],
    "sub_agents": [
      {
        "spec_ref": "detail_extractor",
        "condition": "input.get('detailed', False)"
      }
    ],
    "validation": {
      "input_schema": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string",
            "description": "Content to analyze"
          },
          "options": {
            "type": "object",
            "properties": {
              "detailed": {
                "type": "boolean",
                "default": false
              },
              "domain": {
                "type": "string",
                "default": "general"
              }
            }
          }
        },
        "required": [
          "content"
        ]
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "analysis": {
            "type": "object"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        }
      }
    }
  }
}