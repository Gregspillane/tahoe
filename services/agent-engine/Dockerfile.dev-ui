# Dockerfile for ADK Dev UI
# Specialized container for running the development interface

FROM python:3.12-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app/src

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN useradd --create-home --shell /bin/bash app

# Set working directory
WORKDIR /app

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install google-adk specifically for Dev UI
RUN pip install --no-cache-dir google-adk

# Copy application code
COPY --chown=app:app src/ src/
COPY --chown=app:app specs/ specs/
COPY --chown=app:app scripts/ scripts/
COPY --chown=app:app config/ config/

# Make scripts executable
RUN chmod +x scripts/*.py

# Switch to non-root user
USER app

# Expose Dev UI port
EXPOSE 8002

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8002/health || exit 1

# Default command - launch Dev UI
CMD ["python", "scripts/launch_dev_ui.py", "--host", "0.0.0.0", "--port", "8002"]